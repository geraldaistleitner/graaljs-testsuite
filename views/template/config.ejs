<%layout('../layout')%>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Configuration</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Settings for execution of test suites
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form" action="config" method="post">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input class="form-control" name="name" value="<%=config.name%>">
                                    <p class="help-block">Configuration Name</p>
                                </div>
                                <div class="form-group">
                                    <label>Path</label>
                                    <input class="form-control" name="path" value="<%=config.path%>">
                                    <p class="help-block">Path to executable</p>
                                </div>
                                <input type="hidden" name="id" value="<%=config._id%>" />
                                <button type="submit" class="btn btn-default">Save</button>
                            </form>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->